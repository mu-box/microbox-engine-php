#!/bin/bash

# trap ctrl-c and call ctrl_c()
trap ctrl_c INT SIGINT SIGTERM

killed="false"

function ctrl_c() {
  if [[ "$killed" = "false" ]]; then
    killed="true"
    stop_services
    stop_logging
  fi
}

document_root="${1:-{{document_root}}}"
document_root="/${document_root##/}"

{{#apache}}
start_apache() {
  start-apache ${document_root} &
}
{{/apache}}
{{#nginx}}
start_nginx() {
  start-nginx ${document_root} &
}
{{/nginx}}
{{^mod_php}}
start_php() {
  {{^builtin}}
  start-php &
  {{/builtin}}
  {{#builtin}}
  start-php ${document_root} &
  {{/builtin}}
}
{{/mod_php}}

start_services() {
  {{^mod_php}}
  start_php
  {{/mod_php}}
  {{#apache}}
  start_apache
  {{/apache}}
  {{#nginx}}
  start_nginx
  {{/nginx}}
}
{{#apache}}
stop_apache() {
  pkill httpd
}
{{/apache}}
{{#nginx}}
stop_nginx() {
  pkill nginx
}
{{/nginx}}
{{^mod_php}}
stop_php() {
  {{^builtin}}
  pkill php-fpm
  {{/builtin}}
  {{#builtin}}
  pkill php
  {{/builtin}}
}
{{/mod_php}}
stop_services() {
  {{^mod_php}}
  stop_php
  {{/mod_php}}
  {{#apache}}
  stop_apache
  {{/apache}}
  {{#nginx}}
  stop_nginx
  {{/nginx}}
}

start_logging() {
  declare -a logs
  # php logs
  {{#builtin}}
  logs+=({{data_dir}}/var/log/php/access.log)
  {{/builtin}}
  logs+=({{data_dir}}/var/log/php/php_error.log)
  {{#fpm}}
  logs+=({{data_dir}}/var/log/php/php-fpm.log)
  {{/fpm}}
  {{#apache}}
  # apache logs
  logs+=({{data_dir}}/var/log/apache/access.log)
  logs+=({{data_dir}}/var/log/apache/error.log)
  {{/apache}}
  {{#nginx}}
  # nginx logs
  logs+=({{data_dir}}/var/log/nginx/access.log)
  logs+=({{data_dir}}/var/log/nginx/error.log)
  {{/nginx}}
  for i in ${logs[@]}; do
    sudo mkdir -p $(dirname $i)
    sudo touch $i
    sudo chown -R gomicro $(dirname $i)
  done
  tail -f -n0 ${logs[@]} &
}

stop_logging() {
  pkill tail
}

start_logging
start_services
wait
